{
  "name": "urology-backend",
  "version": "1.0.0",
  "description": "Backend API for Urology Patient Management System",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage && node -e \"const fs = require('fs'); const path = require('path'); if (!fs.existsSync('../coverage')) fs.mkdirSync('../coverage', { recursive: true }); fs.copyFileSync('coverage/lcov.info', '../coverage/lcov.info');\"",
    "setup-db": "node scripts/setup-db.js",
    "create-superadmin": "node scripts/create-superadmin.js",
    "create-department-admin": "node scripts/create-department-admin.js",
    "update-department-admin": "node scripts/update-department-admin.js",
    "create-dept-admin-prod": "node scripts/create-dept-admin-production.js",
    "migrate-db": "node scripts/migrate-database.js",
    "fix-user-constraints": "node scripts/fix-user-deletion-constraints.js",
    "update-role-constraint": "node scripts/update-role-constraint.js",
    "test-security": "node scripts/test-security.js",
    "test-email": "node scripts/test-email.js",
    "test-login-otp": "node scripts/test-login-otp.js",
    "test-token-refresh": "node scripts/test-token-refresh.js",
    "rate-limit:enable": "node scripts/toggle-rate-limiting.js enable",
    "rate-limit:disable": "node scripts/toggle-rate-limiting.js disable",
    "rate-limit:status": "node scripts/toggle-rate-limiting.js status",
    "check-env": "node scripts/check-env.js"
  },
  "dependencies": {
    "axios": "^1.13.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-brute": "^1.0.1",
    "express-rate-limit": "^8.1.0",
    "express-slow-down": "^3.0.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "isomorphic-dompurify": "^2.30.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.11.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.10",
    "pdf-parse": "^1.1.4",
    "pg": "^8.11.3",
    "tesseract.js": "^5.1.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "urology",
    "healthcare",
    "api",
    "nodejs",
    "express",
    "postgresql"
  ],
  "author": "AhimsaGlobal",
  "license": "MIT"
}
